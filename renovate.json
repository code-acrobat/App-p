{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "auto",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 60,
  "prCreation": "immediate",
  "labels": ["dependencies", "renovate"],
  "regexManagers": [
    {
      "fileMatch": ["cpanfile"],
      "matchStrings": [
        "\\b(\\w+)\\s+=>\\s+'?([\\d\\.]+)'?"
      ],
      "datasource": "cpan"
    }
  ]
}
