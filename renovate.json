{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "datasources": [
    {
      "name": "cpan",
      "source": "cpan"
    }
  ],
  "repositories": [
    {
      "packageManager": "cpan",
      "datasource": "cpan"
    }
  ],
  "rangeStrategy": "auto",
  "updateLockFile": true,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 60,
  "prCreation": "immediate",
  "prTitle": "Update dependencies",
  "labels": ["dependencies", "renovate"],
  "packageManagers": [
    {
      "fileMatch": ["cpanfile"],
      "datasource": "cpan",
      "enabled": true
    }
  ]
}
